{
  "name": "Rust Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:debian", 
  "customizations": {
    "vscode": {
      "extensions": "rust-lang.rust-analyzer"
    }
  },
  "containerEnv": {
    "CARGO_HOME": "/workspaces/.cargo",
    "RUST_LOG": "debug"
  },
  "features": {
    "rust": "latest"
  }
}
